<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title of the page -->
    <TextView
        android:id="@+id/textViewPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch Management"
        android:textSize="24sp"
        android:textColor="#002244"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Input fields for branch details -->
    <TextView
        android:id="@+id/textViewBranchIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch ID:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/editTextBranchId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:hint="Enter Branch ID" />

    <TextView
        android:id="@+id/textViewBranchNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch Name:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/editTextBranchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:hint="Enter Branch Name" />

    <TextView
        android:id="@+id/textViewBranchAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/editTextBranchAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:hint="Enter Branch Address" />

    <!-- Buttons to perform CRUD operations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/buttonAddBranch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add Branch"
            android:padding="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:background="#002244"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/buttonUpdateBranch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Update Branch"
            android:padding="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="#002244"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonDeleteBranch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Delete Branch"
            android:padding="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:background="#002244"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/buttonViewBranches"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="View Branches"
            android:padding="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="#002244"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>

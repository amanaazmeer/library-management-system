<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textViewPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher Management"
        android:textSize="24sp"
        android:textColor="#002244"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <!-- Input fields for publisher details -->
    <TextView
        android:id="@+id/textViewPublisherNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher Name:"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/editTextPublisherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:hint="Enter Publisher Name" />

    <TextView
        android:id="@+id/textViewAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:hint="Enter Address" />

    <TextView
        android:id="@+id/textViewPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="phone"
        android:hint="Enter Phone Number" />

    <!-- Buttons to perform CRUD operations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/buttonAddPublisher"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add Publisher"
            android:padding="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:background="#002244"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/buttonUpdatePublisher"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Update Publisher"
            android:padding="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="#002244"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonDeletePublisher"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Delete Publisher"
            android:padding="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:background="#002244"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/buttonViewPublishers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="View Publishers"
            android:padding="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="#002244"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>
